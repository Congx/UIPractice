<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_request_premission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="request permission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        app:layout_constraintStart_toEndOf="@+id/btn_request_premission"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide"
        app:layout_constraintStart_toEndOf="@+id/btn_show"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_request_premission"/>

</androidx.constraintlayout.widget.ConstraintLayout>