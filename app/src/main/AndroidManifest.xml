        <activity android:name=".ui.UIActivity" />
        <activity android:name=".ui.AttrStyleActivity" />
        <activity
            android:name=".ui.keybord.KeybordActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.recyclerview.itemdivider.RvDividerActivity" />
        <activity android:name=".ui.recyclerview.RecyclerviewBaseActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.ivpacage.ImageViewActivity" />
        <activity android:name=".ui.ivpacage.ImageViewHintActivity" />
        <activity android:name=".ui.nestedscroll.NestedBaseActivity" />
        <activity android:name=".ui.nestedscroll.NestedBaseUsedActivity" />
        <activity android:name=".ui.nestedscroll.NestedBehaviorActivity" />
        <activity android:name=".architecture.ViewModelActivity" />
