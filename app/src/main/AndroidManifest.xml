        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".basepractice.StatusActivity"></activity>
        <activity android:name=".basepractice.BaseLibActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".rxjava.AutoDisposeActivity" />
        <activity android:name=".ui.viewPager2.ViewPagerActivity" />
        <activity android:name=".ui.viewPager2.ViewPager2Activity" />
        <activity android:name=".rxjava.BackPressActivity" />
        <activity android:name=".rxjava.RxJavaActivity" />
        <activity android:name=".architecture.LiveActivity" />
